<resources>
    <!-- Base application theme. -->
    <style name="Theme.AnglersLog" parent="Base.Theme.AnglersLog">

    </style>

    <style name="Base.Theme.AnglersLog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:logo">@android:color/transparent</item>

        <item name="colorPrimary">@color/anglers_log_light</item>
        <item name="colorPrimaryDark">@color/anglers_log_dark</item>
        <item name="colorAccent">@color/anglers_log_accent</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="Theme.Dialog.NoTitle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:logo">@android:color/transparent</item>

        <item name="colorPrimary">@color/anglers_log_light</item>
        <item name="colorPrimaryDark">@color/anglers_log_dark</item>
        <item name="colorAccent">@color/anglers_log_accent</item>
    </style>

    <style name="Theme.FullScreen" parent="Theme.AnglersLog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.ButtonBar" parent="@android:style/DeviceDefault.ButtonBar">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="Button.Borderless" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
    </style>

    <style name="Button.BorderlessMedium" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="Button.BorderlessSmall" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="Button.BorderlessColored" parent="@style/Button.BorderlessMedium">
        <item name="android:background">@drawable/button_borderless</item>
    </style>

    <style name="Button.BorderlessColoredText" parent="@style/Button.Borderless">
        <item name="android:textColor">@color/anglers_log_dark</item>
    </style>

    <!-- RecyclerView LinearLayout -->
    <style name="recycler_layout">
        <item name="android:paddingLeft">@dimen/spacing_medium</item>
        <item name="android:paddingRight">@dimen/spacing_medium</item>
    </style>

    <!-- RecyclerView TextView -->
    <style name="recycler_text_view">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
    </style>

    <!-- RecyclerView EditText -->
    <style name="Widget.EditText.RecyclerView" parent="Theme.AppCompat.Light">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
    </style>

    <!-- TextViews -->
    <style name="TextView.FromSelection" parent="Theme.AppCompat.Light">
    </style>

    <style name="TextView.Header" parent="TextView.SmallSubtitle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="TextView.Large" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.MediumSubtitle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/medium_grey</item>
    </style>

    <style name="TextView.Medium" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.SmallSubtitle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/medium_grey</item>
    </style>

    <style name="TextView.Small" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- /TextViews -->

</resources>
