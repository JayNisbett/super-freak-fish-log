<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:logo">@android:color/transparent</item>

        <item name="colorPrimary">@color/anglers_log_light</item>
        <item name="colorPrimaryDark">@color/anglers_log_dark</item>
        <item name="colorAccent">@color/anglers_log_light</item>

        <!-- For activated list items -->
        <item name="android:activatedBackgroundIndicator">@drawable/list_item_selected</item>

        <item name="android:spinnerStyle">@style/spinner_style</item>
    </style>

    <!-- Spinners -->
    <style name="spinner_style" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/white_with_outline</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
    </style>

    <!-- Header TextViews -->
    <style name="header_text_view">
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- RecyclerView LinearLayout -->
    <style name="recycler_layout">
        <item name="android:paddingLeft">@dimen/spacing_medium</item>
        <item name="android:paddingRight">@dimen/spacing_medium</item>
    </style>

    <!-- RecyclerView TextView -->
    <style name="recycler_text_view">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- RecyclerView EditText -->
    <style name="recycler_exit_text">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
        <item name="android:paddingRight">@dimen/spacing_small</item>
    </style>

    <!-- Clickable TextViews -->
    <style name="clickable_text_view">
        <item name="android:paddingLeft">@dimen/spacing_medium</item>
        <item name="android:paddingRight">@dimen/spacing_medium</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/white_with_outline</item>
    </style>

</resources>
