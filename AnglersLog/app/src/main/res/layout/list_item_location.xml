<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.cohenadair.anglerslog.views.TitleSubTitleView
        android:id="@+id/title_subtitle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default"
        custom:titleText="@string/location"
        custom:subtitleText="@string/fishing_spots"
        custom:subsubtitleText="@string/drawer_catches"
        custom:titleStyle="@style/TextView.Medium"
        custom:subtitleStyle="@style/TextView.SmallSubtitle"/>

    <include
        android:id="@+id/cell_separator"
        layout="@layout/view_cell_separator"/>

</LinearLayout>