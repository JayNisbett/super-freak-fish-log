<!--
    A view that allows editing or fetching of current weather data.
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_default"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small"
        android:orientation="horizontal">

        <TextView
            style="@style/TextView.Header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/title_text_view"
            android:text="@string/weather_conditions"
            android:layout_gravity="center_vertical"/>

        <ImageButton
            android:id="@+id/edit_weather_button"
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            android:layout_marginRight="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_medium"
            android:src="@drawable/ic_edit"
            android:contentDescription="@string/weather_edit_description"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/refresh_button"
            android:layout_width="@dimen/image_button_size"
            android:layout_height="@dimen/image_button_size"
            android:src="@drawable/ic_refresh"
            android:contentDescription="@string/refresh_description"
            android:background="@android:color/transparent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weather_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:src="@drawable/no_catch_photo"
            android:contentDescription="@string/weather_description"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <!-- Temperature -->
            <TextView
                style="@style/TextView.Large"
                android:id="@+id/temperature_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="76\u00b0F"/>

            <!-- Wind Speed -->
            <TextView
                android:id="@+id/wind_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Wind Speed: 10 mph"/>

            <!-- Sky Conditions -->
            <TextView
                android:id="@+id/sky_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Sky: Cloudy"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>